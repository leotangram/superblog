<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">

      <h1>Posts</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Cuerpo</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, post %></td>
              <td><%= post.body %></td>
              <td><%= link_to 'Editar', edit_post_path(post), class: "badge badge-info" %></td>
              <td><%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: "badge badge-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Nuevo Post', new_post_path, class: "badge badge-info" %>
    </div>
  </div>
</div>


